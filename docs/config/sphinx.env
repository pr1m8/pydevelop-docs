# Environment Configuration for PyAutoDoc Documentation
# Use with: export $(cat docs/config/sphinx.env | xargs) && sphinx-build ...

# Build Configuration
SPHINX_EXTENSION_PROFILE=standard
SPHINX_THEME=furo
SPHINX_BUILD_DIR=docs/build
SPHINX_SOURCE_DIR=docs/source

# Theme Configuration
FURO_INTENSE_MODE=true
SPHINX_DESIGN_ENABLED=true

# Extension Configuration
MERMAID_THEME=neutral
PLANTUML_FORMAT=svg
GRAPHVIZ_OUTPUT_FORMAT=svg

# Execution Extensions
EXEC_CODE_ENABLED=true
PROGRAM_OUTPUT_ENABLED=true
RUN_PYTHON_ENABLED=true

# API Documentation
AUTOAPI_ENABLED=true
PYDANTIC_ERDANTIC=true
ENUM_TOOLS_ENABLED=true

# Development Settings
SPHINX_AUTOBUILD=true
SPHINX_VERBOSE=false
SPHINX_DEBUG=false

# Multi-version (disabled by default)
MULTIVERSION_ENABLED=false
MULTIVERSION_BRANCH_PATTERN="main|develop"
MULTIVERSION_TAG_PATTERN="v*"

# Performance
SPHINX_PARALLEL_JOBS=4
SPHINX_KEEP_GOING=true

# Output Options  
HTML_BASEURL=https://pyautodoc.readthedocs.io/
SITEMAP_ENABLED=true
COPY_BUTTON_ENABLED=true
TOGGLE_BUTTON_ENABLED=true